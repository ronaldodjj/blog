<div class="row no-gutters block-9">
 
    <div class="col-md-6 order-md-last d-flex">
      <form action="/post" class="bg-light p-4 p-md-5 contact-form" method="post">
        <h1><strong  style="color:rgb(0, 0, 0);">Cont√°ctame</strong></h1>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Nombre" name="name" id="name"  required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Correo" name="email" id="email" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Asunto" name="subject" id="subject" required>
        </div>
        <div class="form-group">
          <textarea  cols="30" rows="7" class="form-control" placeholder="Mensaje" name="message" id="message" required></textarea>
        </div>
        <div class="form-group">
          <input type="submit" value="Enviar mensaje" class="btn btn-primary py-3 px-5">
        </div>
      </form>
    
    </div>

    <div class="col-md-6 d-flex">
        <div class="img" style="background-image: url(images/bg_1.png);"></div>
    </div>
  </div>
